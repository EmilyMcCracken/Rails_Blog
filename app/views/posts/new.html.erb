<%= content_tag :div, class: 'post_form_img' do -%>
<%= content_tag :div, class: 'post_form_bg' do -%>
<%= content_tag :div, class: 'post_title' do -%>
	New Post
<% end -%>
<%= content_tag :div, class: 'post_box' do -%>
<%= form_for @post do |f| %>
<%= f.text_field :title, :class => 'new_post_title', :placeholder => "Title" %>
<%= tag :br %>
<%= f.text_field :body, :class => 'new_post_body', :placeholder => "Body" %>
<%= tag :br %>
<%= f.submit :create, :class => 'new_post_button', :value => "New Post" %>
<% end -%>
<% end %>
<% end -%>
<% end -%>