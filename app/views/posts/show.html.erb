<%= content_tag :div, class: 'comment_form_img' do -%>
<%= content_tag :div, class: 'post_to_comment' do -%>
<%= content_tag :div, class: 'post_to_comment_title' do -%>
<%= @posts.title %>
<% end -%>
<%= content_tag :div, class: 'post_to_comment_body' do -%>
<%= @posts.body %>
<% end -%>
<% end -%>
<%= content_tag :div, class: 'other_comments' do -%>
<% @posts.comments.each do |comment| %>
<%= content_tag :div, class: 'small_comment_title' do -%>
	<%= comment.title %>
	<%= tag :br %>
	<% end -%>
	<%= content_tag :div, class: 'small_comment_body' do -%>
	<%= comment.body %>
	<% end -%>
	<%= tag :br %>
	<%= tag :br %>
<%= content_tag :div, class: 'username_comment' do -%>
-	<%= comment.user.username %>
<% end -%>
	<%= tag :br %>
	<%= tag :br %>
<% end %>
<% end -%>
<%= content_tag :div, class: 'comment_form_bg' do -%>
<%= content_tag :div, class: 'comment_title' do -%>
	New Comment
<% end -%>
<%= content_tag :div, class: 'comment_box' do -%>
<%= form_for @comment do |f| %>
<%= f.text_field :title, :class => 'new_comment_title', :placeholder => "Title" %>
<%= tag :br %>
<%= f.text_field :body, :class => 'new_comment_body', :placeholder => "Body" %>
<%= f.hidden_field :post_id, :value => @posts.id %>
<%= tag :br %>
<%= f.submit :create, :class => 'new_comment_button', :value => "New Comment" %>
<% end -%>
<% end %>
<% end -%>
<% end -%>