<%= content_tag :div, class: 'users_show_img' do -%>
<%= content_tag :div, class: 'users_show_username' do -%>
<%= @user.username %>
<% end -%>
<%= content_tag :div, class: 'users_three_box' do -%>
<%= content_tag :div, class: 'users_show_info' do -%>
 <%= content_tag :h3, "USER INFO:" %>
 Email: <%= @user.email %> 
<%= tag :br %>
Zipcode: <%= @user.zipcode %>
<%= tag :br %>
 First Name: <%= @user.profile.fname %>

<%= tag :br %>
Last Name: <%= @user.profile.lname %>
<%= tag :br %>
Favorite Bird: <%= @user.profile.favbird %>
<% end -%>
<%= content_tag :div, class: 'users_show_bio' do -%>
 <%= tag :br %>
 <%= @user.profile.bio %>
<% end -%>
<%= content_tag :div, class: 'users_show_own_posts' do -%>
<% @posts.each do |post| %>
<%= content_tag :div, class: 'users_own_posts_format' do -%>
<%= content_tag :div, class: 'users_own_posts_format_title' do -%>
	<%= link_to post.title, post_path(post.id) %>
<% end -%>
	 - <%= post.body %>
	<%= tag :br %>
	<% end -%>
	<% end %>
<% end -%>
<% end -%>
<% if @current_user.id == @user.id  %>
<%= content_tag :div, class: 'users_buttons_block' do -%>
<%= content_tag :div, class: 'users_show_sign_out' do -%>
	<%= link_to("Sign Out", '/logout', method: :delete) %>
	<% end -%>
<%= content_tag :div, class: 'users_show_edit_profile' do -%>
	<%= link_to("Edit Profile", '/logout', method: :get) %>
	<% end -%>
<%= content_tag :div, class: 'users_show_delete_user' do -%>
	<%= link_to("Delete User", '/logout', method: :delete) %>
	<% end -%>
<% end -%>
<% end %>
<% end -%>